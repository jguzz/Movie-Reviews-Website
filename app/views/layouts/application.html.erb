<!DOCTYPE html>
<html>
  <head>
    <title>MovieReviewsWebsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
        <li><%= link_to 'All movies', movies_path %></li>
        <li><%= link_to 'See all users watchlist', users_path %></li>

        <% if @current_user %>
          <li><%= link_to 'My Watchlist', user_path(@current_user.id) %></li>

          <li ><%= link_to 'Log-Out', destroy_session_path, method: :delete %></li>
          <li >Welcome <%= @current_user.name %></li>
        <% else %>
          <li><%= link_to 'Sign-up', new_user_path %> / <%= link_to 'Login', new_login_path %></li>
        <% end %>
    </ul>

    <%= yield %>
  </body>
</html>
