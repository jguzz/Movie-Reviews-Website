

<div class="jumbotron" style="background-image: url(https://image.tmdb.org/t/p/original<%= @movie.backdrop_path %>); height: 500px; width: 100%; background-position: center; background-repeat: no-repeat;  max-width: 100%;
  ">
</div>
<div class="container" style = "text-align: center;">
<div class="card">
	<!-- Poster -->
	<img src="https://image.tmdb.org/t/p/w500/<%= @movie.poster_path %>" alt="" class="card-img-top" style="width: 20%; margin: auto;">

	<h1 class ="card-title"><%= @movie.title %></h1>

	<h3>Released: <%= @movie.release_date %></h3>

	<h3>Genre: <%= @movie.genre %></h3>

	<h1>Description:</h1>
	<h2><%= @movie.overview %></h2>

</div>


	<!-- Backdrop -->
	

	<!-- Reviews -->
	<article class="media">
		<figure class="media-left">
			<%= @movie.title %>
		</figure>
		<div class="media-content">
			<div class="content">
				<p>
					<% @movie.reviews.each do |review| %>
						<strong><%= review.user.name %></strong> 
						<small>Rating: <%= review.rating %></small> <br>
						<br>
						<%=review.description %> 
					<% end %>
				</p>
			</div>
		</div>
		<div class="media-right">
			<button class="delete"></button>
		</div>
</div>
	</article>

	
</div>
</div>