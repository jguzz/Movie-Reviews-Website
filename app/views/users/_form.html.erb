<!-- User New/Edit Form -->
<%if flash[:errors] %>
    <% flash[:errors].each do |error| %>
   		<%= error %>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
	<%= f.label :name %> <br>
	<%= f.text_field :name %><br>
	<%= f.label :password %><br>
	<%= f.password_field :password %>
	<%= f.submit %>
<% end %>